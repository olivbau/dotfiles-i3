! ===================
! urxvt configuration
! ===================

URxvt*scrollBar:	false
URxvt*letterSpace: 	-1
URxvt*font: 		xft:Menlo for Powerline:regular:size=12
URxvt*boldFont:		xft:Menlo for Powerline:bold:ize=12
URxvt*cursorBlink:  true
URxvt.iso14755:		false
URxvt*utf8:			true
URxvt.keysym.C-equal:         resize-font:bigger
URxvt.keysym.C-parenright:    resize-font:smaller
urxvt*depth: 32
urxvt*background: [90]#1F1F1F

! =================
! rofi color scheme
! =================
#define color_scheme_green
#define hl_text #282828
#define m_color #ffb52a

rofi.color-enabled:		true
rofi.separator-style: 	solid
rofi.color-normal:		argb:00000000, #a89984, argb:00000000,  m_color,  hl_text
rofi.color-urgent:		argb:00000000, #F99157, argb:00000000,  #F99157,  hl_text
rofi.color-active:		argb:00000000, #6699CC, argb:00000000,  #6699CC,  hl_text
rofi.color-window:		argb:ee222222, m_color, m_color
rofi.font:				xos4terminus medium 12
rofi.bw:                0
rofi.padding:           10
rofi.hide-scrollbar:    true
rofi.lines:             5


